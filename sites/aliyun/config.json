  "resource_manage": {
    "eip": {
      "title": "EIP管理",
      "resourceType": "弹性公网IP",
      "idField": "AllocationId",
      "nameField": "Name",
      "statusField": "Status",
      "apiGetFunction": "DescribeEipAddresses",
      "apiGetDataPath": "EipAddresses.EipAddress",
      "infoSections": [
        {
          "title": "基本信息",
          "fields": [
            {"label": "EIP名称", "field": "Name", "defaultValue": "-"},
            {"label": "EIP地址", "field": "IpAddress", "class": "font-mono text-sm"},
            {"label": "实例ID", "field": "AllocationId", "class": "font-mono text-sm"},
            {"label": "状态", "field": "Status", "type": "badge"}
          ]
        }
      ],
      "actions": [
        {
          "name": "enable_protection",
          "label": "开启删除保护",
          "showWhen": "!resource.DeletionProtection",
          "apiFunction": "EnableEipDeletionProtection",
          "class": "btn-success",
          "confirmMessage": null
        },
        {
          "name": "disable_protection",
          "label": "关闭删除保护",
          "showWhen": "resource.DeletionProtection === true",
          "apiFunction": "DisableEipDeletionProtection",
          "class": "btn-warning",
          "confirmMessage": "确定要关闭删除保护吗？"
        },
        {
          "name": "release",
          "label": "释放EIP",
          "showWhen": "resource.Status === 'Available' && !resource.DeletionProtection",
          "apiFunction": "ReleaseEipAddress",
          "class": "btn-error",
          "confirmMessage": "确定要释放该EIP吗？释放后无法恢复！"
        },
        {
          "name": "rename",
          "label": "修改名称",
          "showWhen": "true",
          "type": "form",
          "class": "btn-info"
        }
      ],
      "renameConfig": {
        "apiFunction": "ModifyEipAddressAttribute",
        "nameField": "Name",
        "placeholder": "请输入EIP名称"
      },
      "detailFields": [
        {"label": "带宽", "field": "Bandwidth", "suffix": " Mbps"},
        {"label": "计费方式", "field": "ChargeType"},
        {"label": "绑定实例", "field": "InstanceId", "class": "font-mono text-sm", "defaultValue": "未绑定"},
        {"label": "绑定类型", "field": "InstanceType", "defaultValue": "-"},
        {"label": "删除保护", "field": "DeletionProtection", "formatter": "boolean"},
        {"label": "ISP", "field": "ISP"},
        {"label": "地域", "field": "RegionId"},
        {"label": "创建时间", "field": "AllocationTime", "type": "datetime"}
      ]
    },
    "ecs_instance": {
      "title": "实例管理",
      "resourceType": "ECS实例",
      "idField": "InstanceId",
      "nameField": "InstanceName",
      "statusField": "Status",
      "apiGetFunction": "DescribeInstances",
      "apiGetDataPath": "Instances.Instance",
      "infoSections": [
        {
          "title": "基本信息",
          "fields": [
            {"label": "实例名称", "field": "InstanceName", "defaultValue": "-"},
            {"label": "实例 ID", "field": "InstanceId", "class": "font-mono text-sm"},
            {"label": "状态", "field": "Status", "type": "badge"}
          ]
        }
      ],
      "actions": [
        {
          "name": "start",
          "label": "启动实例",
          "showWhen": "resource.Status === 'Stopped'",
          "apiFunction": "StartInstance",
          "class": "btn-success",
          "confirmMessage": null
        },
        {
          "name": "stop",
          "label": "停止实例",
          "showWhen": "resource.Status === 'Running'",
          "apiFunction": "StopInstance",
          "class": "btn-error",
          "confirmMessage": "确定要停止实例吗？"
        },
        {
          "name": "reboot",
          "label": "重启实例",
          "showWhen": "resource.Status === 'Running'",
          "apiFunction": "RebootInstance",
          "class": "btn-warning",
          "confirmMessage": "确定要重启实例吗？"
        },
        {
          "name": "rename",
          "label": "修改名称",
          "showWhen": "true",
          "type": "form",
          "class": "btn-info"
        },
        {
          "name": "vnc",
          "label": "VNC 连接",
          "showWhen": "true",
          "type": "custom",
          "class": "btn-secondary"
        }
      ],
      "renameConfig": {
        "apiFunction": "ModifyInstanceAttribute",
        "nameField": "InstanceName",
        "placeholder": "请输入实例名称"
      },
      "detailFields": [
        {"label": "实例规格", "field": "InstanceType"},
        {"label": "CPU", "field": "Cpu", "suffix": " 核"},
        {"label": "内存", "field": "Memory", "formatter": "memory"},
        {"label": "操作系统", "field": "OSName", "fallback": "OSType"},
        {"label": "私网 IP", "field": "VpcAttributes.PrivateIpAddress.IpAddress[0]", "class": "font-mono text-sm", "defaultValue": "-"},
        {"label": "公网 IP", "field": "PublicIpAddress.IpAddress[0]", "class": "font-mono text-sm", "defaultValue": "-"},
        {"label": "EIP 地址", "field": "EipAddress.IpAddress", "class": "font-mono text-sm", "defaultValue": "-"},
        {"label": "创建时间", "field": "CreationTime", "type": "datetime"},
        {"label": "到期时间", "field": "ExpiredTime", "type": "datetime"}
      ]
    },
    "disk": {
      "title": "云盘管理",
      "resourceType": "云盘",
      "idField": "DiskId",
      "nameField": "DiskName",
      "statusField": "Status",
      "apiGetFunction": "DescribeDisks",
      "apiGetDataPath": "Disks.Disk",
      "infoSections": [
        {
          "title": "基本信息",
          "fields": [
            {"label": "云盘名称", "field": "DiskName", "defaultValue": "-"},
            {"label": "云盘ID", "field": "DiskId", "class": "font-mono text-sm"},
            {"label": "状态", "field": "Status", "type": "badge"}
          ]
        }
      ],
      "actions": [
        {
          "name": "attach",
          "label": "挂载云盘",
          "showWhen": "resource.Status === 'Available'",
          "type": "custom",
          "class": "btn-success"
        },
        {
          "name": "detach",
          "label": "卸载云盘",
          "showWhen": "resource.Status === 'In_use'",
          "apiFunction": "DetachDisk",
          "class": "btn-warning",
          "confirmMessage": "确定要卸载该云盘吗？"
        },
        {
          "name": "enable_protection",
          "label": "开启删除保护",
          "showWhen": "!resource.DeleteAutoSnapshot && resource.Status !== 'In_use'",
          "apiFunction": "ModifyDiskAttribute",
          "class": "btn-info",
          "confirmMessage": null
        },
        {
          "name": "delete",
          "label": "删除云盘",
          "showWhen": "resource.Status === 'Available' && resource.Portable",
          "apiFunction": "DeleteDisk",
          "class": "btn-error",
          "confirmMessage": "确定要删除该云盘吗？删除后无法恢复！"
        },
        {
          "name": "rename",
          "label": "修改名称",
          "showWhen": "true",
          "type": "form",
          "class": "btn-info"
        }
      ],
      "renameConfig": {
        "apiFunction": "ModifyDiskAttribute",
        "nameField": "DiskName",
        "placeholder": "请输入云盘名称"
      },
      "detailFields": [
        {"label": "容量", "field": "Size", "suffix": " GB"},
        {"label": "云盘类型", "field": "Category"},
        {"label": "挂载实例", "field": "InstanceId", "class": "font-mono text-sm", "defaultValue": "未挂载"},
        {"label": "设备名", "field": "Device", "class": "font-mono text-sm", "defaultValue": "-"},
        {"label": "可卸载", "field": "Portable", "formatter": "boolean"},
        {"label": "随实例释放", "field": "DeleteWithInstance", "formatter": "boolean"},
        {"label": "是否加密", "field": "Encrypted", "formatter": "boolean"},
        {"label": "地域", "field": "RegionId"},
        {"label": "可用区", "field": "ZoneId"},
        {"label": "创建时间", "field": "CreationTime", "type": "datetime"}
      ]
    }
  }
}
