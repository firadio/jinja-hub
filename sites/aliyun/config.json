      "apiFunction": "DescribeDisks",
      "dataPath": "Disks.Disk",
      "rowKey": "DiskId",
      "showRegionSelector": true,
      "showItemCount": true,
      "noWrap": true,
      "fields": [
        {
          "field": "DiskName",
          "label": "云盘名称",
          "showInFilter": true,
          "filterType": "input",
          "filterField": "diskName",
          "placeholder": "输入云盘名称",
