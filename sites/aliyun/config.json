{
  "site": {
    "title": "阿里云管理平台",
    "description": "纯前端阿里云资源管理"
  },
  "api": {
    "ecs": {
      "version": "2014-05-26",
      "endpoint": "https://ecs.{region}.aliyuncs.com/"
