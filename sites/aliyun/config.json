  },
  "regions": [
    {"id": "cn-hangzhou", "name": "华东1 (杭州)"},
    {"id": "cn-shanghai", "name": "华东2 (上海)"},
    {"id": "cn-beijing", "name": "华北2 (北京)"},
    {"id": "cn-shenzhen", "name": "华南1 (深圳)"},
    {"id": "cn-guangzhou", "name": "华南2 (广州)"},
    {"id": "cn-hongkong", "name": "中国香港"}
  ],
  "pages": {
    "login": {
      "title": "登录",
      "path": "/login.html",
      "order": 0
    },
    "ecs_instances": {
      "title": "ECS实例列表",
      "path": "/ecs_instances.html",
      "nav": "ECS实例",
      "order": 1
    },
    "vpc_list": {
      "title": "VPC列表",
