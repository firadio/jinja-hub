      "nav": "VPC列表",
      "order": 2
    },
    "vswitch_list": {
      "title": "交换机列表",
      "path": "/vswitch_list.html",
      "nav": "交换机列表",
      "order": 3
    },
    "eip_list": {
      "title": "EIP列表",
      "path": "/eip_list.html",
