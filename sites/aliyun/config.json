          "filterType": "input",
          "filterField": "privateIp",
          "placeholder": "输入私网IP",
          "showInTable": true,
          "class": "font-mono text-sm",
          "defaultValue": "-"
        },
        {
          "field": "PublicIpAddress.IpAddress[0]",
          "label": "公网IP",
          "showInFilter": true,
          "filterType": "input",
          "filterField": "publicIp",
          "placeholder": "输入公网IP",
          "showInTable": true,
          "class": "font-mono text-sm",
          "defaultValue": "-"
        },
        {
          "field": "EipAddress.IpAddress",
          "label": "EIP",
          "showInFilter": true,
          "filterType": "input",
          "filterField": "eipAddress",
          "placeholder": "输入EIP地址",
          "showInTable": true,
          "class": "font-mono text-sm",
          "defaultValue": "-"
        },
        {
          "field": "CreationTime",
          "label": "创建时间",
          "showInTable": true,
          "class": "text-sm",
          "columnType": "datetime"
        },
        {
          "field": "actions",
          "label": "操作",
          "showInTable": true,
          "columnType": "actions"
        }
      ]
    },
