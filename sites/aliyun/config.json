  "tables": {
    "ecs_instances": {
      "title": "ECS 实例列表",
      "componentName": "ecsInstances",
      "apiFunction": "DescribeInstances",
      "dataPath": "Instances.Instance",
      "rowKey": "InstanceId",
      "showRegionSelector": true,
      "showItemCount": true,
      "noWrap": true,
      "fields": [
        {
          "field": "InstanceName",
          "dataField": "InstanceName",
          "label": "实例名称",
          "showInFilter": true,
          "filterType": "input",
          "filterField": "instanceName",
          "placeholder": "输入实例名称",
          "showInTable": true,
          "class": "font-medium",
          "defaultValue": "-"
        },
        {
          "field": "InstanceId",
          "label": "实例ID",
          "showInTable": true,
          "class": "font-mono text-sm"
        },
        {
          "field": "Status",
          "label": "状态",
          "showInFilter": true,
          "filterType": "select",
          "filterField": "status",
          "filterOptions": [
            {"value": "Running", "label": "运行中"},
            {"value": "Stopped", "label": "已停止"},
